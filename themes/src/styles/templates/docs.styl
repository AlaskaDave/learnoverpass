.docs-row
  cf()

.docs-list
  background-color #f0f0f0
  overflow auto
  ul 
    display none
    margin 0
    padding 1em
    line-height 1em
    list-style-type: none;
    li
      margin-bottom 0.5em
    a
      display block
      color black
      text-decoration none
      &:hover
        color text_accent
  .docs-list-title
    line-height 3em
    color text_muted
  .docs-list-active
    a
      color text_accent

.docs-improve
  font-size 0.5em
  font-weight normal

.docs-content
  .content
    @extend .container

.docs-repl
   .CodeMirror
     height 300px

.CodeMirror
  height default
  
@media (min-width sm_size)
  .docs-list
    height 100vh
    ul 
      display block 
    column(1/4)
  .docs-content
    height 100vh
    overflow auto
    padding 0px
    margin 0px
    column(3/4)

@media (min-width md_size)
  .gsc-control-cse
    padding 0.1em 0 0.5em 1em !important
    width 16em !important
    float right
